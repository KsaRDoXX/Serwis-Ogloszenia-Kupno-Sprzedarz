@model IEnumerable<Order>

<h2>Zarządzaj zamówieniami</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Użytkownik</th>
            <th>Ogłoszenie</th>
            <th>Data zamówienia</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.UserName</td>
                <td>@order.Announcement.Name</td>
                <td>@order.OrderDate</td>
                <td>@order.OrderState</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditOrder" asp-route-id="@order.Id" class="btn btn-primary">Edytuj</a>
                    <a asp-controller="Admin" asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
