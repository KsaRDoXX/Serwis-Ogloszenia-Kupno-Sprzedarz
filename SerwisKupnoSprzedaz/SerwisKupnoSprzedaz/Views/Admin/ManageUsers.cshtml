@model IEnumerable<User>

<h2>Zarządzaj użytkownikami</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Imię</th>
            <th>Email</th>
            <th>Administrator</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(user.IsAdmin ? "Tak" : "Nie")</td>
                <td>
                    <a asp-controller="User" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edytuj</a>
                    <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
