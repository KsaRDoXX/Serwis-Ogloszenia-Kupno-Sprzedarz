@model Announcment

@{
    ViewData["Title"] = "Szczegóły ogłoszenia (Admin)";
}

<h1>Szczegóły ogłoszenia (Admin)</h1>

<div>
    <h3>@Model.Name</h3>
    <p><strong>Opis:</strong> @Model.Description</p>
    <p><strong>Kategoria:</strong> @Model.Category</p>
    <p><strong>Cena:</strong> @Model.Price PLN</p>
    <p><strong>Zweryfikowane:</strong> @(Model.Verified ? "Tak" : "Nie")</p>
</div>

<form method="post" action="/Announcments/Delete">
    <input type="hidden" name="announcementId" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Usuń ogłoszenie</button>
</form>

<form method="post" action="/Announcments/Verify">
    <input type="hidden" name="announcementId" value="@Model.Id" />
    <button type="submit" class="btn btn-success">Weryfikuj ogłoszenie</button>
</form>

<form method="post" action="/Orders/Create">
    <input type="hidden" name="announcementId" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Zamów</button>
</form>
