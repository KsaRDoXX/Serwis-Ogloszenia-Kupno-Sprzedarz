@model Order

<h2>Edytuj zamówienie</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Ukryte pole dla ID zamówienia -->

    <div class="form-group">
        <label for="OrderDate">Data Zamówienia</label>
        <input asp-for="OrderDate" type="date" class="form-control" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DeliveryType">Typ dostawy</label>
        <select asp-for="DeliveryType" class="form-control">
            <option value="Kurier">Kurier</option>
            <option value="Paczkomat">Paczkomat</option>
            <option value="Odbiór osobisty">Odbiór osobisty</option>
            <option value="Poczta Polska">Poczta Polska</option>
        </select>
        <span asp-validation-for="DeliveryType" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="OrderAdress">Adres dostawy</label>
        <input asp-for="OrderAdress" type="text" class="form-control" />
        <span asp-validation-for="OrderAdress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="OrderState">Stan zamówienia</label>
        <input asp-for="OrderState" type="text" class="form-control" />
        <span asp-validation-for="OrderState" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>
