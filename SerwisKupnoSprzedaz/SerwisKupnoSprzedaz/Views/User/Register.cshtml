@model User

<h2>Zarejestruj się</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="UserName">Nazwa użytkownika</label>
        <input type="text" asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Adres Email</label>
        <input type="text" asp-for="Email" class="form-control"></input>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

     <<div class="form-group">
        <label for="PasswordHash"> Hasło </label>
        <input type="password" asp-for="PasswordHash" class="form-control"></input>
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <form asp-controller="User" asp-action="Register" asp-route-id="@User" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Zarejestruj</button>
    </form>
</form>

