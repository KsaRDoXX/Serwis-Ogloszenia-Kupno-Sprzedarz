@*

*@
@{
    ViewData["Title"] = "Rejestracja";
}

<form method="post" asp-controller="User" asp-action="Login">
    <div class="form-group">
        <label for="loginInput">Login</label>
        <input type="text" name="login" class="form-control" id="loginInput" aria-describedby="login" placeholder="Wpisz Login">
    </div>
    <div class="form-group">
        <label for="PasswordInput">Hasło</label>
        <input type="password" name="password" class="form-control" id="PasswordInput" placeholder="Hasło">
        <small id="PasswordInput" class="form-text text-muted">Nigdy nie podawaj nikomu swojego hasła</small>
    </div>
    <div class="form-group">
        <label for="PasswordInput2">Powtórz hasło</label>
        <input type="password" name="password2" class="form-control" id="PasswordInput2" placeholder="Powtórz Hasło">
    </div>
    <br />
    <div class="form-group">
        <label for="AdressInput">Podaj adres</label>
        <input type="text" class="form-control" name="adress" id="AdressInput" placeholder="Adres">
        <small id="AdressInput" class="form-text text-muted">Domyślny adres do wysyłki</small>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Wyślij</button>

</form>
